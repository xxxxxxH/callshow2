<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_margin="5dp"
    android:id="@+id/rootView"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/itemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="a" />

    <ImageView
        android:id="@+id/itemAv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@mipmap/av1" />
    <TextView
        android:id="@+id/itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/itemAv"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        android:textStyle="bold"
        android:gravity="center"
        tools:text="Audrey"/>

    <TextView
        android:id="@+id/itemPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/itemName"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="10sp"
        tools:text="916 740 0000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/item_answer"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/itemAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/item_reject"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>